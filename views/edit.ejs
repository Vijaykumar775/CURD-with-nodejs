<%- include ('./base/header.ejs') %>

<div class="container">
  <div class="alert bg-success my-3">
    <h4 class="text-center">Update your Account</h4>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <form action="/update/<%= stuInfo._id %>" method="post">
        <div class="field my-3">
          <label for="" class="form-label">Name</label>
          <input
            type="text"
            placeholder="Enter your name"
            class="form-control"
            name="name"
            value="<%= stuInfo.name %>"
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">City</label>
          <input
            type="text"
            placeholder="Enter your City"
            class="form-control"
            name="city"
            ,
            value="<%= stuInfo.city %>"
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Email</label>
          <input
            type="text"
            placeholder="Enter your Email"
            class="form-control"
            name="email"
            ,
            value="<%= stuInfo.email %>"
          />
        </div>

        <div class="field my-3">
          <label for="" class="form-label">Contact</label>
          <input
            type="text"
            placeholder="Enter your Contact"
            class="form-control"
            name="contact"
            value="<%= stuInfo.contact %>"
          />
        </div>
        <input type="submit" value="Update" class="btn btn-warning w-100" />
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>

<%- include ('./base/footer.ejs') %>
